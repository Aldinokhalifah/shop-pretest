
<h2>Purchase Input</h2>

<form action="/purchase/create" method="POST" class="form">
    <label>Product
        <select name="product_id" required>
        <% products.map(p => { %>
            <option value="<%= p.id %>"><%= p.name %> (stok: <%= p.quantity %>)</option>
        <% }) %>
        </select>
    </label>

    <label>Quantity
        <input type="number" name="quantity" value="1" min="1" required>
    </label>

    <label>Customer Name
        <input type="text" name="buyer_name" placeholder="Customer name (opsional)">
    </label>

    <button type="submit">Create Transaction</button>
</form>
