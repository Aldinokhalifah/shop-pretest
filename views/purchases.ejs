
<h2>Purchases List</h2>

<table class="tbl">
    <thead>
        <tr><th>ID</th><th>Product</th><th>Qty</th><th>Total</th><th>Buyer</th><th>Status</th><th>Time</th><th>Action</th></tr>
    </thead>
    <tbody>
        <% purchases.map(p => { %>
        <tr>
            <td><%= p.id %></td>
            <td><%= p.product_name %></td>
            <td><%= p.quantity %></td>
            <td><%= p.total_price %></td>
            <td><%= p.buyer_name %></td>
            <td><%= p.status %></td>
            <td><%= p.created_at %></td>
            <td>
            <% if (p.status !== 'cancelled') { %>
                <form method="POST" action="/purchase/cancel/<%= p.id %>" onsubmit="return confirm('Batalkan pembelian ini?');">
                <button type="submit">Cancel</button>
                </form>
            <% } else { %>
                -
            <% } %>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
